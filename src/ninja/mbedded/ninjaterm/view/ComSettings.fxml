<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:controller="ninja.mbedded.ninjaterm.controllers.ComSettingsController"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT"
      spacing="20"
      prefHeight="500" prefWidth="800"
      fillWidth="true" GridPane.vgrow="ALWAYS"
      stylesheets="@style.css" styleClass="comSettings">
    <!--style="-fx-background-color: red;" -->

    <padding>
        <Insets top="40" bottom="40" left="40" right="40"/>
    </padding>

    <Button fx:id="scanButton" prefWidth="60">Scan</Button>
    <ComboBox fx:id="foundComPortsComboBox" prefWidth="100"></ComboBox>

    <GridPane vgap="10" hgap="10" styleClass="comPortParameters">
        <Label GridPane.rowIndex="0" GridPane.columnIndex="0">Baud Rate:</Label>
        <ComboBox fx:id="baudRateComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label GridPane.rowIndex="1" GridPane.columnIndex="0">Num. Data Bits:</Label>
        <ComboBox fx:id="numDataBitsComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        <Label GridPane.rowIndex="2" GridPane.columnIndex="0">Parity:</Label>
        <ComboBox fx:id="parityComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        <Label GridPane.rowIndex="3" GridPane.columnIndex="0">Num. Stop Bits:</Label>
        <ComboBox fx:id="numStopBitsComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    </GridPane>

</VBox>



