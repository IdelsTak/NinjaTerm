<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<VBox fx:controller="ninja.mbedded.ninjaterm.controllers.TerminalTabController"
      xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT"
      spacing="20"
      prefHeight="500" prefWidth="800"
      fillWidth="true" GridPane.vgrow="ALWAYS"
      stylesheets="@style.css">
    <!--style="-fx-background-color: red;" -->

    <padding>
        <Insets top="40" bottom="40" left="40" right="40"/>
    </padding>
    <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: black;">
        <ScrollPane style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-color: transparent;">
            <TextFlow fx:id="rxTextTextFlow" styleClass="terminal" style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-color: transparent;">
                <padding>
                    <Insets top="10" bottom="10" left="10" right="10"/>
                </padding>
                <Text styleClass="text">RX text wil go here.</Text>
            </TextFlow>
        </ScrollPane>
    </VBox>

</VBox>



