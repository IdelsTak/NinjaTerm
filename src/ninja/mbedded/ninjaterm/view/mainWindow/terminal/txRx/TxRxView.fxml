<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>
<?import ninja.mbedded.ninjaterm.util.javafx.comDataPane.ComDataPane?>
<Tab
        fx:controller="ninja.mbedded.ninjaterm.view.mainWindow.terminal.txRx.TxRxViewController"
        xmlns:fx="http://javafx.com/fxml"
        fx:id="rxTxTab" text="RX/TX" closable="false">
    <VBox alignment="TOP_LEFT"
          spacing="20"
          prefHeight="500" prefWidth="800"
          fillWidth="true" GridPane.vgrow="ALWAYS"
          stylesheets="@../../../../resources/style.css">

        <padding>
            <Insets top="20" bottom="20" left="20" right="20"/>
        </padding>

        <HBox VBox.vgrow="ALWAYS" spacing="10">

            <VBox minWidth="120" alignment="TOP_CENTER"
                  spacing="10"
                  style=
                          "-fx-border-style: hidden solid hidden hidden;
                            -fx-border-width: 0 1 0 0;
                            -fx-border-color: silver;">
                <!-- ========================================= -->
                <!-- ======= OPEN/CLOSE COM PORT BUTTON ====== -->
                <!-- ========================================= -->

                <Button fx:id="openCloseComPortButton" minWidth="80" minHeight="80" contentDisplay="TOP"/>

                <!-- SPACER -->
                <VBox minHeight="20"></VBox>

                <Button fx:id="clearTextButton"     minWidth="80" minHeight="50" contentDisplay="TOP">Clear Text</Button>
                <Button fx:id="displayButton"       minWidth="80" minHeight="50" contentDisplay="TOP">Display</Button>
                <Button fx:id="formattingButton"    minWidth="80" minHeight="50" contentDisplay="TOP">Formatting</Button>
                <Button fx:id="coloriserButton"     minWidth="80" minHeight="50" contentDisplay="TOP">Colouriser</Button>
                <Button fx:id="filtersButton"       minWidth="80" minHeight="50" contentDisplay="TOP">Filters</Button>
                <Button fx:id="freezeRxButton"      minWidth="80" minHeight="50" contentDisplay="TOP">Freeze RX</Button>
            </VBox>

            <GridPane fx:id="dataContainerGridPane" HBox.hgrow="ALWAYS">

                <rowConstraints>
                    <RowConstraints vgrow="ALWAYS"/>
                    <RowConstraints vgrow="NEVER"/>
                    <RowConstraints vgrow="ALWAYS"/>
                </rowConstraints>

                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- =========================================== -->
                <!-- ================ RX DATA PANE ============= -->
                <!-- =========================================== -->
                <!-- StackPane is so that the "scroll to bottom" image can be overlaid ontop of the terminal window -->
                <StackPane fx:id="rxDataStackPane"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"
                           VBox.vgrow="ALWAYS" style="-fx-background-color: black;">

                    <!-- =========================================== -->
                    <!-- ================== TERMINAL =============== -->
                    <!-- =========================================== -->
                    <ScrollPane fx:id="rxDataScrollPane">
                        <padding>
                            <Insets top="0" bottom="0" left="0" right="0"/>
                        </padding>
                        <!-- style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-color: transparent;"> -->
                        <!-- This TextFlow holds the many RX Text objects -->
                        <TextFlow fx:id="rxDataTextFlow" styleClass="txRxText"
                                  style="-fx-background-color: transparent; -fx-control-inner-background: transparent; -fx-color: transparent;">
                            <padding>
                                <Insets top="10" bottom="10" left="10" right="10"/>
                            </padding>
                            <Text styleClass="text">TX/RX text wil go here.</Text>
                        </TextFlow>
                    </ScrollPane>

                    <!-- =========================================== -->
                    <!-- ========== DATA DIRECTION INDICATOR ======= -->
                    <!-- =========================================== -->
                    <StackPane fx:id="dataDirectionRxStackPane" StackPane.alignment="TOP_RIGHT" maxWidth="100"
                               maxHeight="20" alignment="CENTER"
                               style="-fx-background-color: rgba(150, 150, 150, 0.5); -fx-background-radius: 0 0 0 15;">
                        <Label fx:id="dataDirectionRxLabel" alignment="CENTER" style="-fx-text-fill: white;">RX
                        </Label>
                    </StackPane>


                    <!-- =========================================== -->
                    <!-- ============= AUTO-SCROLL BUTTON ========== -->
                    <!-- =========================================== -->
                    <!-- This pane (with auto-scroll image) gets placed in the bottom-right hand corner of the above scroll pane -->
                    <Pane fx:id="autoScrollButtonPane" StackPane.alignment="BOTTOM_RIGHT" translateX="-20"
                          translateY="-20"
                          maxWidth="100" maxHeight="100">
                        <ImageView fx:id="scrollToBottomImageView" fitWidth="100" fitHeight="100"
                                   styleClass="scrollToBottomButton">
                            <image>
                                <Image url="@../../../../resources/down-arrow.png"/>
                            </image>
                        </ImageView>
                    </Pane>
                </StackPane>

                <ComDataPane fx:id="rxComDataPane" GridPane.rowIndex="0" GridPane.columnIndex="0"
                             style="-fx-background-color: red;"/>

                <!-- =========================================== -->
                <!-- ============== DRAGGABLE NODE ============= -->
                <!-- =========================================== -->
                <!-- This node is used to create a draggable element which the user can adjust to change
                 the sizes of the TX and RX panes -->
                <HBox fx:id="draggableHBox"
                      GridPane.rowIndex="1" GridPane.columnIndex="0"
                      minHeight="10"/>

                <!-- =========================================== -->
                <!-- ================ TX DATA PANE ============= -->
                <!-- =========================================== -->
                <!-- StackPane is so that the "scroll to bottom" image can be overlaid ontop of the terminal window -->
                <StackPane fx:id="txDataStackPane"
                           GridPane.rowIndex="2" GridPane.columnIndex="0"
                           VBox.vgrow="ALWAYS" style="-fx-background-color: black;">

                    <!-- =========================================== -->
                    <!-- ================== TX DATA ================ -->
                    <!-- =========================================== -->
                    <ScrollPane fx:id="txTextScrollPane">
                        <TextFlow fx:id="txTextFlow" styleClass="txRxText">
                            <padding>
                                <Insets top="10" bottom="10" left="10" right="10"/>
                            </padding>
                            <Text fx:id="txDataText" style="-fx-fill: lime;"></Text>
                            <!--<TextArea>Testing</TextArea>-->
                        </TextFlow>
                    </ScrollPane>

                    <!-- =========================================== -->
                    <!-- ========== DATA DIRECTION INDICATOR ======= -->
                    <!-- =========================================== -->
                    <StackPane StackPane.alignment="TOP_RIGHT" maxWidth="100" maxHeight="20" alignment="CENTER"
                               style="-fx-background-color: rgba(150, 150, 150, 0.5); -fx-background-radius: 0 0 0 15;">
                        <Label alignment="CENTER" style="-fx-text-fill: white;">TX</Label>
                    </StackPane>
                </StackPane>

            </GridPane>

            <!-- =========================================== -->
            <!-- =========== RIGHT-HAND SIDE PANE ========== -->
            <!-- =========================================== -->
            <fx:include fx:id="macrosView" source="macros/MacrosView.fxml"/>

        </HBox>
    </VBox>
</Tab>



